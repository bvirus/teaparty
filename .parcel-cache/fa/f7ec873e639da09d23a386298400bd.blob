* { box-sizing: border-box;}
html, body { height: 100%; margin: 0; padding: 0; font-family: 'Helvetica', 'sans serif';}
input[type="text"], input[type="email"] { 
    border: none;
    border-bottom: 0.2rem solid blue;
    font-family: 'Helvetica', 'sans serif';
    font-size: 12pt;
    margin-left: 3rem;
    width: 100%;
}

h1 a {
    color: black;
}

h1 a:visited {
    color: black;
}

input[type="text"]:focus {
    outline: none;
}

#file-input-area {
    display: block;
}
#file-input-area fieldset {
    margin-bottom: 1rem;
    border: 0.2rem solid #CCC;
}

textarea {
    border:0.2rem solid blue;
    padding: 0.2rem;
    font-family: 'Helvetica', 'sans serif';
    resize: vertical;
    width: 100%;
    max-width: 60ch;
    height: 8ch;
}
body {
    margin-bottom: 1rem;
    max-width: 100ch;
    margin-right: auto;
    margin-left: auto;
    height: 100%;

}
h1 {
    font-family: 'LEMON MILK';
    font-weight: bold;
    text-align: center;
    font-size: 32pt;
    user-select: none; 
}
.form-part {
    font-family: 'LEMON MILK';
    font-weight: normal;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
}

.form-part div {
    display: flex;
    width: 100%;
    flex-direction: row;
    justify-content: space-between;
}

.form-part button {
    background-color: #CCC;
    font-family: 'LEMON MILK';
    border: none;
    padding: 1rem;
    box-sizing: border-box;
}

.form-part button[type="submit"] {
    padding: 2rem;
    margin: 0;
    width: 100%;
    font-weight: bold;
    font-size: 18pt;
}

.form-part button img {
    height: 2rem;
    text-align: center;
}

.form-part button:hover {
    background-color: #888;
}
